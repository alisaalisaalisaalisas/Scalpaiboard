# =================================
# Scalpaiboard Environment Variables
# =================================

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=scalpaiboard
DB_USER=scalpaiboard
DB_PASSWORD=change_me_in_production

# Redis
REDIS_URL=redis://redis:6379

# JWT Authentication
JWT_SECRET=change_this_to_a_secure_random_string_in_production
JWT_EXPIRY_HOURS=24

# Application Settings
LOG_LEVEL=debug
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_RPM=100

# gRPC Communication
GRPC_GO_PORT=50051
GRPC_CSHARP_PORT=50052

# ===================================
# AI Providers (User configures these in Settings UI)
# Leave empty - users add their own keys
# ===================================
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=
# GOOGLE_PROJECT_ID=
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# TOGETHER_API_KEY=
# GROQ_API_KEY=

# Telegram Notifications (optional)
# TELEGRAM_BOT_TOKEN=

# Frontend URLs
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001/ws
